<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marshalchen.ultimateandroid.demo">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RxbasicActivity"
            android:label="@string/title_activity_rxbasic"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.marshalchen.ultimateandroid.demo" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RxImageActivity"
            android:label="@string/title_activity_rx_image"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.marshalchen.ultimateandroid.demo" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest>